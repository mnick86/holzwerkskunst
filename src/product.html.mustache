<div class="d-flex justify-content-between">
  <h2>{{ product.name }}</h2>
  <button type="button" class="btn btn-outline-secondary share">
    <span class="bi bi-share"></span>
  </button>
</div>
<div class="tags d-flex flex-wrap gap-2 mt-3">
  {{#each product.tags}}
  <a
    class="btn btn-outline-secondary btn-sm rounded-3"
    href="/kategorie/{{.}}.html"
    role="button"
    >{{ . }}</a
  >
  {{/each}}
</div>
<p class="mt-2 lead">{{ product.description }}</p>
<div class="d-flex flex-wrap gap-5 justify-content-center mt-4">
  {{#each product.images}}
  <a href="/produkt/{{ this.id }}/{{ this.large }}"
    ><img
      class="d-block w-100 shadow rounded-4"
      src="/produkt/{{ this.id }}/{{ this.small }}"
      alt="{{ ../product.name }}"
  /></a>
  {{/each}}
</div>
<div class="mt-5 text-center">
  <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Kontakt / Anfragen
  </button>
</div>

<script>
  const shareData = {
    title: '{{metaAttributes.ogTitle}}',
    text: 'Schau mal was ich gefunden habe',
    url: '{{metaAttributes.ogUrl}}',
  };

  const btn = document.querySelector('.share');
  btn.addEventListener('click', async () => {
    try {
      await navigator.share(shareData);
    } catch (err) {}
  });
</script>
