<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:image" content="https://www.Holzwerkskunst.de/produkt/{{metaAttributes.ogImage}}" />
    <meta property="og:title" content="{{metaAttributes.ogTitle}}" />
    <meta property="og:site_name" content="{{metaAttributes.ogSiteName}}" />
    <meta property="og:type" content="{{metaAttributes.ogType}}" />
    <meta property="og:url" content="{{metaAttributes.ogUrl}}" />
    <meta property="og:description" content="{{metaAttributes.ogDescription}}" />
    <title>Holzwerkskunst.de</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Custom styles -->
    <style>
      .body {
        background: var(--bs-tertiary-bg) !important;
        font-family: system-ui,-apple-system,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans","Liberation Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji" !important;
      }
    </style>
  </head>
  <body class="body">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white shadow">
      <div class="container-fluid">
        <button
          class="btn btn-outline"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvas"
          aria-controls="offcanvas"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <span class="navbar-brand mx-auto"
          ><a href="/" class="text-decoration-none text-reset h3">Holzwerkskunst.de</a></span
        >
      </div>
    </nav>

    <!-- Sidebar -->
    <div
      class="offcanvas offcanvas-start"
      tabindex="-1"
      id="offcanvas"
      aria-labelledby="offcanvasLabel"
    >
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasLabel">Holzwerkskunst.de</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>
      <div class="offcanvas-body">
        <div>
          <ul class="list-group">
            <li class="list-group-item border-0">
              <h5><a href="/" class="link-secondary text-decoration-none">Startseite</a></h5>
            </li>
            {{#each tags}}
            <li class="list-group-item border-0">
              <h5><a href="/kategorie/{{.}}.html" class="link-secondary text-decoration-none">{{ . }}</a></h5>
            </li>
            {{/each}}
            <li class="list-group-item border-0">
              <h5><a href="/impressum.html" class="link-secondary text-decoration-none">Impressum</a></h5>
            </li>
            <li class="list-group-item border-0">
              <h5><a href="/datenschutz.html" class="link-secondary text-decoration-none">Datenschutzerklärung</a></h5>
            </li>
            <li class="list-group-item border-0">
              <button class="btn btn-link link-secondary p-0 text-decoration-none" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                <h5>Kontakt</h5>
              </button>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div id="main" class="p-4">
      {{> (mainTemplate) }}
    </div>

    <div class="text-center pt-2 pb-4">Made with ❤️ in Niederbayern</div>

    <!-- Contact Modal -->
    <div
      class="modal fade"
      id="staticBackdrop"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="staticBackdropLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="staticBackdropLabel">Kontakt</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Matthias Nick<br />
            Lindenstrasse 7a<br />
            84030 Ergolding<br />
            <br /><br />
            Telefon: 0171 6447548<br />
            E-Mail: <a href="mailto:mnick86@gmail.com">mnick86@gmail.com</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS and Popper.js (required for Bootstrap) -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>

    <script>
      document.addEventListener('slide.bs.carousel', (event) => {
        const img = event.relatedTarget.querySelectorAll('img')[0];
        const src = img.getAttribute('data-src');
        img.setAttribute('src', src);
      });
    </script>
  </body>
</html>
